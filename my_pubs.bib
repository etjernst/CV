	journal = {International Journal of Hygiene and Environmental Health},
	author = {Tzivian, Lilian and Winkler, Angela and Dlugaj, Martha and Schikowski, Tamara and Vossoughi, Mohammad and Fuks, Kateryna and Weinmayr, Gudrun and Hoffmann, Barbara},
