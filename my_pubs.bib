@article{lybbert_does_2018,
	title = {Does the type of lemon matter? {New} data on hybrid seed purity and viability in {Kenya}},
	abstract = {Agricultural productivity in sub-Saharan Africa falls far short of technical and economic potential. Increasing the use of improved agricultural technologies by smallholder farmers could result in higher yields and proﬁts. Researchers are increasingly recognizing that low-quality inputs may be contributing to low adoption rates of improved agricultural technologies, but gaps remain in our understanding of the causes of substandard inputs. In the case of seed, low quality can be due both to explicit counterfeiting and to poor handling or seed age—both of which can lead to low seed viability. This study evaluates the viability and authenticity of a retail-level maize hybrid seed using both germination tests and genetic markers. Sample seeds were obtained directly from a prominent seed manufacturer, as well as from retail stores in western Kenya using covert shopping methods. We ﬁnd strong evidence of poor seed viability on average, and some evidence that almost 20 percent of downstream seed diﬀers from manufacturer seed. Additionally, the manufacturer samples and most of the retail samples contain substantial proportions of unexpected genetic material. Evidence of poor handling of legitimate seed would imply very diﬀerent policy solutions than would counterfeit germplasm implies very diﬀerent policy solutions and poor handling of legitimate seed, of the seed, imply very diﬀerent policy solutions. We ﬁnd that roughly 77\% of seeds in our samples germinate, compared to the supposed regulatory threshold of 95\% germination for certiﬁed seed. We simulate the number of seeds that a farmer would need to plant per hole to ensure that at least one seed germinates on 95\% of their ﬁeld. For more than half of the purchased seed samples, farmers would need to plant 5 seeds per hole to obtain that level of certainty. Thus, low germination rates likely impose a high cost on farmers and contribute to the low uptake of improved inputs.},
	language = {en},
	author = {Lybbert, Travis and Tjernstrom, Emilia and Clavijo, Jose},
	year = {2018}
}

@article{ittersum_can_2016,
